# Frontend Development Configuration Template
# Copy this file to .env.local and customize for your setup

# Application Mode (standalone | centralized)
VITE_MODE=standalone

# API Service Endpoints
VITE_API_URL=http://localhost:8002
VITE_AUTH_SERVICE_URL=http://localhost:9000
VITE_COMPANY_API_URL=http://localhost:8002

# Optional: Blockchain Service (centralized mode only)
# VITE_BLOCKCHAIN_SERVICE_URL=http://localhost:8545

# Feature Flags
VITE_ENABLE_BLOCKCHAIN=false
VITE_ENABLE_ADVANCED_ANALYTICS=false
VITE_ENABLE_SOCIAL_INTEGRATION=true

# Development Settings
VITE_DEBUG_MODE=true
VITE_API_TIMEOUT=5000

# Authentication
VITE_JWT_STORAGE_KEY=nilbx_token
VITE_SESSION_TIMEOUT=3600000