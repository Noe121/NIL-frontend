{
  "name": "frontend",
  "version": "1.0.0",
  "description": "This project is structured for static content hosting (e.g., via S3) and can easily transition to a dynamic web application.",
  "main": "index.js",
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:components": "vitest tests/components/",
    "test:utils": "vitest tests/utils/",
    "test:password-reset": "vitest tests/password-reset.test.jsx --run",
    "test:forgot-password": "vitest tests/forgot-password.test.jsx --run",
    "test:integration": "node tests/integration/test_frontend_basic.js",
    "test:integration:aws": "node tests/integration/test_frontend_aws.js",
    "test:integration:landing": "node tests/integration/test_landingpage_integration.js",
    "test:role-backgrounds": "chmod +x tests/scripts/test_role_backgrounds.sh && tests/scripts/test_role_backgrounds.sh",
    "test:aws-deployment": "chmod +x tests/scripts/test_aws_deployment.sh && tests/scripts/test_aws_deployment.sh",
    "test:all-frontend": "chmod +x tests/scripts/run_frontend_tests.sh && tests/scripts/run_frontend_tests.sh",
    "test:all": "chmod +x tests/scripts/run_all_tests.sh && tests/scripts/run_all_tests.sh",
    "test:legacy": "node tests/integration/test_landingpage_integration.js",
    "dev": "vite",
    "build": "vite build",
    "dev:standalone": "cp .env.standalone .env && vite --port 5173 --mode standalone",
    "dev:centralized": "cp .env.centralized .env.local && VITE_MODE=centralized vite --port 5174 --mode centralized",
    "build:standalone": "cp .env.standalone .env && vite build --mode standalone",
    "build:centralized": "cp .env.centralized .env && vite build --mode centralized",
    "preview:standalone": "cp .env.standalone .env && vite preview --port 4173",
    "preview:centralized": "cp .env.centralized .env && vite preview --port 4174",
    "setup:standalone": "./setup_frontend_standalone.sh",
    "setup:centralized": "./setup_frontend_centralized.sh",
    "switch:standalone": "cp .env.standalone .env && echo 'Switched to standalone mode'",
    "switch:centralized": "cp .env.centralized .env && echo 'Switched to centralized mode'",
    "health:check": "node -e \"import('./src/utils/config.js').then(c => c.checkAllServices().then(console.log))\"",
    "blockchain:check": "./check_blockchain.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Noe121/NIL-frontend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Noe121/NIL-frontend/issues"
  },
  "homepage": "https://github.com/Noe121/NIL-frontend#readme",
  "dependencies": {
    "@rainbow-me/rainbowkit": "^2.2.9",
    "@tanstack/react-query": "^5.90.5",
    "axios": "^1.6.0",
    "ethers": "^6.15.0",
    "framer-motion": "^12.23.24",
    "prop-types": "^15.8.1",
    "qr": "^0.5.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.23.0",
    "react-toastify": "^11.0.5",
    "viem": "^2.38.3",
    "wagmi": "^2.18.1"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^5.0.4",
    "jsdom": "^27.0.0",
    "vite": "^7.1.10",
    "vitest": "^3.2.4"
  }
}
